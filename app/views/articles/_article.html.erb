<div class="panel">
	<div class="panel-body">
		<h1><%= link_to article.title, article %></h1>
		<div>
			<%= truncate(article.body, length: 50) %>
			<% if user_signed_in? %>
				<% if current_user.is_editor? %>
					- <%= link_to 'Eliminar', article, method: :delete %>
				<% end %>
			<% end %>
		</div>
	</div>
</div>