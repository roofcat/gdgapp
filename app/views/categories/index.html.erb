<p id="notice"><%= notice %></p>

<h1>Lista de Categorías</h1>

<table class="table table-stroped table-hover">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Color</th>
            <th>Opciones</th>
        </tr>
    </thead>

    <tbody>
        <% @categories.each do |category| %>
            <tr>
                <td><%= category.name %></td>
                <td><%= category.color %></td>
                <td><%= link_to 'Ver', category %></td>
                <td><%= link_to 'Editar', edit_category_path(category) %></td>
                <td><%= link_to 'Borrar', category, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
            </tr>
        <% end %>
    </tbody>
</table>
<br>
<%= link_to 'Nueva categoría', new_category_path %>
