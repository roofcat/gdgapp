<div class="panel">
	<div class="panel-body">
		<p id="notice"><%= notice %></p>

		<h1><%= @category.name %></h1>  
		<p>
			<h2>Art√≠culos</h2>
			<% @category.articles.each do |article| %>
				<h3><%= link_to article.title, article %></h3>
				<div>
					<%= article.body %> - <%= link_to 'Eliminar', article, method: :delete %>
				</div>
			<% end %>
		</p>
		<p>
		  <strong>Color:</strong>
		  <%= @category.color %>
		</p>

		<%= link_to 'Editar', edit_category_path(@category) %> |
		<%= link_to 'Volver', categories_path %>
	</div>
</div>