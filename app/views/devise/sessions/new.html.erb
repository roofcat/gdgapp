<div class="panel">
    <div class="panel-body">
        <h2>Inicio sesión a GDG</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group label-floating">
                <%= f.label :email, 'Correo electrónico', class: 'control-label' %><br />
                <%= f.email_field :email, placeholder: 'Correo electrónico', autofocus: true, class:'form-control' %>
            </div>

            <div class="form-group label-floating">
                <%= f.label :password, 'Contraseña', class: 'control-label' %><br />
                <%= f.password_field :password, placeholder: 'Contraseña', autocomplete: "off", class:'form-control' %>
            </div>

            <% if devise_mapping.rememberable? -%>
                <div class="form-group">
                    <div class="checkbox">
                      <label>
                          <%= f.check_box :remember_me %>
                          <span class="checkbox-material">
                              <span class="check"></span>
                          </span>
                          <%= f.label :remember_me, 'Recordarme' %>
                      </label>
                    </div>
                </div>
            <% end -%>

            <div class="form-group">
                <%= f.submit "Entrar", class: 'btn btn-material-deep-orange' %>
            </div>
        <% end %>
        <%= render "devise/shared/links" %>
    </div>
</div>
